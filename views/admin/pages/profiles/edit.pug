extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  h1(class="mb-4") Chỉnh sửa thông tin cá nhân

  +alert-success(5000)
  +alert-error(5000)

  form(
    action=`${prefixAdmin}/profiles/edit?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="fullName") Họ tên *
      input(
        type="text"
        class="form-control"
        name="fullName"
        id="fullName"
        value=user.fullName
        required
      )
    div(class="form-group")
      label(for="email") Email *
      input(
        type="email"
        class="form-control"
        name="email"
        id="email"
        value=user.email
        required
      )
    div(class="form-group")
      label(for="password") Mật khẩu
      input(
        type="password"
        class="form-control"
        name="password"
        id="password"
      )
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        name="phone"
        id="phone"
        value=user.phone
      )
    div(class="form-group"
        upload-image   
    )
      label(for="avatar") Ảnh đại diện
      input(
        type="file"
        class="form-control-file"
        name="avatar"
        id="avatar"
        accept="image/*"
        upload-image-input
      )
      img(
        src=user.avatar
        class="image-preview"
        upload-image-preview
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật