extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  +alert-success(3000)
  +alert-error(3000)

  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)

    if(cartDetail.products.length > 0)
      .row
        .col-12
          table(class="table table-bordered" cart)
            thead
              tr
                th STT
                th Ảnh
                th Tên
                th Giá
                th Số lượng
                th Tổng tiền
            tbody
              each product, index in cartDetail.products
                tr
                  td #{index + 1}
                  td
                    img(
                      src=product.productInfo.thumbnail
                      alt=product.productInfo.title
                      width="80px"
                    )
                  td #{product.productInfo.title}
                  td #{product.productInfo.priceNew}$
                  td #{product.quantity}
                  td #{product.totalPrice}$
        
          h3(class="text-right") Tổng đơn hàng: #{cartDetail.totalPrice}$
    else 
      tr
        td(
          colspan="7"
          class="text-center"
        ) Chưa có sản phẩm trong giỏ hàng
    .row
      .col-12
        .card.p-4.my-4
          form(
            action="/checkout/order"
            method="POST"
          )
            div(class="form-group")
              label(for="fullName") Họ tên
              input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
              )
            div(class="form-group")
              label(for="phone") Số điện thoại
              input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                required
              )
            div(class="form-group")
              label(for="address") Địa chỉ
              input(
                type="text"
                class="form-control"
                id="address"
                name="address"
                required
              )
            div(class="form-group")
              button(
                type="submit"
                class="btn btn-success btn-block"
              ) ĐẶT HÀNG

